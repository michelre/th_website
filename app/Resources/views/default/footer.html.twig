<div class="row">
    <ul class="columns small-3">
        {%  for stat in stats %}
            <li>
                <div class="row">
                    <span class="columns small-3">{{ stat.tracker }}:</span>
                    <span class="columns small-9">{{ stat.nb | number_format(0, '.', ' ') }} (maj {{ stat.lastIndexationDate | date("d/m/Y", "Europe/Paris") }})</span>
                </div>
            </li>
        {% endfor %}
        <li>
            <div class="row">
                <span class="columns small-3">Total:</span>
                <span class="columns small-9">{{ nbTotal | number_format(0, '.', ' ') }}</span>
            </div>
        </li>
    </ul>
    <div class="columns small-1 fb-like" data-href="http://www.torrent-hunter.com" data-layout="box_count" data-action="like" data-show-faces="true" data-share="true"></div>
    <div class="columns small-7 advertisement">
        <script src="http://www.pubdirecte.com/script/banniere.php?id=103840&ref=69514"></script>
    </div>
</div>
