<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Agrégateur de différents trackers vous permettant de trouver plus
        facilement vos torrents." />
        <meta name="google-site-verification" content="OaOsT4VW7wpr6hVrqOOeCMQNfFzM3wjK-T8pK8A4g7U" />
        <title>{% block title %}Torrent Hunter - Agrégateur de tracker{% endblock %}</title>
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/css/foundation.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/app/css/style.css') }}" />
        {% endblock %}

        {% block javascript %}
            <script type="text/javascript" src="{{ asset('vendor/js/vendor/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('vendor/js/typeahead/typeahead.bundle.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/app/js/utils.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/app/js/bootstrap.js') }}"></script>
        {% endblock %}


    </head>
    <body>

    <div id="fb-root"></div>
    <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
    <div id="header">
            <div class="row">
                <div class="column small-5">
                    <img src="{{ asset('bundles/app/image/logo-bw.png') }}"/>
                </div>
                <div class="column small-7">
                    <div>
                        <form action="{{ path('search') }}" method="GET">
                            <div class="row collapse">
                                <div class="small-11 columns">
                                    <input type="text" class="no-clear search-typeahead typeahead" placeholder="Wrong Turn 6, 12 years a slave..." name="query"/>
                                </div>
                                <div class="small-1 columns">
                                    <button type="submit" class="button radius postfix"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div id="categories" class="row">
                <ul class="inline-list">
                    <li><a href="{{ path('homepage') }}">Accueil</a></li>
                    <li><a href="{{ path('torrentsPerCategory', {'category': 'movie'}) }}">Film</a></li>
                    <li><a href="{{ path('torrentsPerCategory', {'category': 'serie'}) }}">Série</a></li>
                    <li><a href="{{ path('torrentsPerCategory', {'category': 'music'}) }}">Musique</a></li>
                    <li><a href="{{ path('torrentsPerCategory', {'category': 'game'}) }}">Jeux</a></li>
                    <li><a href="{{ path('torrentsPerCategory', {'category': 'application'}) }}">Application</a></li>
                    <li><a href="{{ path('torrentsPerCategory', {'category': 'ebook'}) }}">Ebook</a></li>
                </ul>
            </div>
        </div>

        <div id="content">{% block body %}{% endblock %}</div>

        <div id="footer" class="row">
            {{ render(controller('WebsiteBundle:Default:footer')) }}
        </div>
    </body>

    <script type="text/javascript">
        var regex = new RegExp("offset=(.*)");
        var currentPage = (regex.exec(window.location.search)) ? parseInt(regex.exec(window.location.search)[1]) : 1;
        var utils = new Utils();
        utils.setCurrentPage(currentPage);
        new Bootstrap();
    </script>
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-59189220-1', 'auto');
        ga('send', 'pageview');

    </script>
</html>
